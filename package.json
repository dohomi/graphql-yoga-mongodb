{
  "name": "mongo-yoga",
  "version": "0.0.1",
  "description": "GraphQL-YOGA Example with mongodb",
  "main": "src/index.js",
  "scripts": {
    "test": "npm run test",
    "dev": "nodemon src/index.js",
    "serve": "node src/index.js",
    "build": "NODE_ENV=PRODUCTION babel src -d dist --copy-files",
    "start": "NODE_ENV=production node dist/index.js",
    "lint": "eslint --ext .js --ignore-path .gitignore .",
    "format": "find src -name '*.js' | xargs -I{} ./node_modules/.bin/prettier --write --single-quote {}"
  },
  "keywords": [
    "gql",
    "yoga",
    "mongodb"
  ],
  "author": "Dominic Garms <djgarms@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "graphql-yoga": "^1.14.4",
    "jsonwebtoken": "^8.3.0",
    "mongodb": "^3.0.10"
  },
  "devDependencies": {
    "eslint": "^4.19.1",
    "eslint-plugin-node": "^6.0.1",
    "nodemon": "^1.17.5"
  },
  "engines": {
    "node": ">=8.0.0"
  }
}
